<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yc.ssm.weibo.mapper.RootMapper">
	<select id="findRoot" resultType="Root" parameterType="Root">
		<!-- select * from Root where rpwd = #{rpwd} and rname = (rid = #{rname} or rname = #{rname}) -->
	
		select * from Root where rname = #{rname} and rpwd = #{rpwd}
	
	</select>
	


</mapper>