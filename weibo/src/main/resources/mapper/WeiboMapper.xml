<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yc.ssm.weibo.mapper.WeiboMapper">
	<insert id="insertWeibo" parameterType="Weibo">
		INSERT INTO
		weibo(wid,wuserid,wtime,wNote) VALUES
		(wid_seq.nextval,#{wuserid,jdbcType=VARCHAR},default,#{wNote,jdbcType=VARCHAR})
	</insert>

	<select id="findWeibo" parameterType="string" resultType="Weibo">
		select
		* from weibo where wuserid=#{wuserid}
	</select>
	
	<resultMap type="PaginationBean" id="PaginationBeanMap">
		<result column="pageSize" property="pageSize"/>
		<result column="currPage" property="currPage"/>
		<collection property="rows"
			column="{pageSize}=pageSize,{currPage}=currPage" ofType="Weibo"
			select="getWeibo" />
	</resultMap>
	
	<select id="listAll" parameterType="PaginationBean" resultMap="PaginationBeanMap">
		select count(1) total, ceil(count(1)/${pageSize}) totalPage, ${pageSize} pageSize, ${currPage} currPage from weibo
	</select>
	
	<select id="getWeibo" resultType="Weibo">
		select t.* from (select n.* ,rownum rn from (select * from weibo order by 1) n 
		where ${currPage} * ${pageSize} >=rownum) t
		where rn > (${currPage} - 1) * ${pageSize}
	</select>
	

	<select id="findById" resultType="Weibo">
		select * from Weibo where wid =
		#{wid}
	</select>

	<update id="updateStatus" parameterType="Weibo">
		update weibo set wstatus
		= #{wstatus} where wid = #{wid}
	</update>
</mapper>
