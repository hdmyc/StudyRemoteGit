<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yc.ssm.weibo.mapper.WeiboMapper">
	<select id="listAll" resultType="Weibo">
		select * from weibo
	</select>

	<insert id="insertWeibo" parameterType="Weibo">
		INSERT INTO weibo(wid,wuserid,wtime,wNote) VALUES (wid_seq.nextval,#{wuserid,jdbcType=VARCHAR},default,#{wNote,jdbcType=VARCHAR})
	</insert>

	<select id="findWeibo" parameterType="string" resultType="Weibo">
		select * from weibo where wuserid=#{wuserid}
	</select>
</mapper>